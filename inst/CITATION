citHeader("To cite PACKAGE NAME in publications use:")

year = sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers = paste("R package version", meta$Version)

bibentry(bibtype = "Manual",
  title        = "TITLE",
  author       = "AUTHORS",
  year         = year,
  doi          = "ZENODO DOI",
  url          = "GITHUB URL",
  note         = vers,
  textVersion  =
  paste("AUTHORS (", year, "). ",
        "TITLE ",
        vers, ". ",
        "DOI: ZENODO DOI.", sep = "")
)